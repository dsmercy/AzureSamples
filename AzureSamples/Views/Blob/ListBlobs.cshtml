@model IEnumerable<AzureSamples.Models.BlobModel>

@{
    ViewData["Title"] = "ListBlobs";
}

<h1>ListBlobs</h1>

<p>
    <a asp-action="upload">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Properties.CreatedOn)
            </th>
            <th>@Html.DisplayName("Download")</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Deleted)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Properties.CreatedOn)
                </td>
                <td>
                    <a asp-action="Download" asp-route-fileName="@item.Name">Download</a>
                </td>
            </tr>
        }
    </tbody>
</table>
